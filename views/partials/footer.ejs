            <span class="d-block">Adaugă</span>
        </a>
        
        <a href="/chat" class="tab <%= currentTitle.includes('Mesaje') || currentTitle.includes('Chat') ? 'active' : '' %> text-decoration-none
           <%= isGuest ? 'disabled-link' : '' %>">
