</div> <footer class="footer mt-auto py-2 bg-white fixed-bottom d-md-none border-top">
    <div class="container d-flex justify-content-around">
        
        <% 
            // Verificăm dacă variabila title există, altfel folosim un text gol ca să nu dea eroare
            const activeTitle = (typeof title !== 'undefined') ? title : ''; 
        %>
        
        <a href="/" class="tab <%= activeTitle.indexOf('Acasă') !== -1 ? 'active' : '' %> text-decoration-none">
            <i class="bi bi-house-door-fill"></i>
            <span class="d-block">Acasă</span>
        </a>
        
        <% if (isLoggedIn) { %>
            <a href="/add-car" class="tab <%= activeTitle.indexOf('Adaugă') !== -1 ? 'active' : '' %> text-decoration-none">
                <i class="bi bi-plus-circle-fill"></i>
                <span class="d-block">Adaugă</span>
            </a>
            
            <a href="/chat" class="tab <%= (activeTitle.includes('Mesager') || activeTitle.includes('Chat')) ? 'active' : '' %> text-decoration-none">
                <i class="bi bi-chat-dots-fill"></i>
                <span class="d-block">Chat</span>
            </a>
            
            <a href="/profile" class="tab <%= (activeTitle.indexOf('Garajul') !== -1 || activeTitle.indexOf('Profil') !== -1) ? 'active' : '' %> text-decoration-none">
                <i class="bi bi-person-circle"></i>
                <span class="d-block">Profil</span>
            </a>
        <% } else { %>
            <a href="/login" class="tab <%= activeTitle.indexOf('Login') !== -1 ? 'active' : '' %> text-decoration-none">
                <i class="bi bi-box-arrow-in-right"></i>
                <span class="d-block">Login</span>
            </a>
            
            <a href="/register" class="tab <%= activeTitle.indexOf('Creează') !== -1 ? 'active' : '' %> text-decoration-none">
                <i class="bi bi-person-plus-fill"></i>
                <span class="d-block">Înregistrare</span>
            </a>
        <% } %>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/main.js"></script>
</body>
</html>