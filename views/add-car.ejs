<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="add-car-header">
        <a href="/" class="back-arrow">â†</a>
        <h1>AdaugÄƒ maÈ™inÄƒ</h1>
        <button type="submit" form="addCarForm" class="btn-save-top"><i class="fas fa-save"></i> Save</button>
    </header>

    <div class="form-container">
        <% if (error) { %>
            <div class="error-message-banner"><%= error %></div>
        <% } %>

        <form id="addCarForm" action="/add-car" method="POST" enctype="multipart/form-data">
            
            <div class="form-section number-plate-section">
                <div class="plate-input-group">
                    <div class="md-plate-tag">
                        <img src="/img/drapel-md.png" alt="MD Flag"> MD
                    </div>
                    <input 
                        type="text" 
                        name="plateNumber" 
                        placeholder="NumÄƒr de Ãnmatriculare" 
                        required 
                        maxlength="8"
                        oninput="this.value = this.value.toUpperCase().replace(/[^A-Z0-9\s]/g, '');"
                    >
                </div>
            </div>

            <div class="form-section brand-section">
                <p class="section-title">Marca & Model</p>
                <div class="select-group">
                    <i class="fas fa-car-side"></i>
                    <select name="make" required>
                        <option value="">SelecteazÄƒ marca</option>
                        <option value="Mercedes">Mercedes-Benz</option>
                        <option value="BMW">BMW</option>
                        <option value="Audi">Audi</option>
                        </select>
                </div>
                <div class="select-group mt-10">
                    <i class="fas fa-car-crash"></i>
                    <select name="model" required>
                        <option value="">SelecteazÄƒ modelul</option>
                        <option value="E-Class">E-Class</option>
                        <option value="X5">X5</option>
                        <option value="A6">A6</option>
                        </select>
                </div>
            </div>

            <div class="form-section images-section">
                <p class="section-title">Imagini maÈ™inÄƒ <span class="image-count" id="imageCount">(0/1)</span></p>
                <label for="imageUpload" class="image-upload-area" id="imageUploadArea">
                    <i class="fas fa-plus-circle"></i>
                    <p>AdaugÄƒ pÃ¢nÄƒ la 1 imagine</p>
                    <input type="file" id="imageUpload" name="carImage" accept="image/*" required hidden>
                </label>
            </div>
            
            <div class="spacer-bottom"></div>
        </form>
    </div>

    <script>
        const imageUpload = document.getElementById('imageUpload');
        const imageUploadArea = document.getElementById('imageUploadArea');
        const imageCountSpan = document.getElementById('imageCount');
        const maxFiles = 1;

        // AscultÄƒ cÃ¢nd se selecteazÄƒ un fiÈ™ier Ã®n input-ul ascuns
        imageUpload.addEventListener('change', (e) => {
            const files = e.target.files;
            
            // AceastÄƒ logicÄƒ se asigurÄƒ cÄƒ imaginea este selectatÄƒ È™i afiÈ™atÄƒ
            if (files.length > 0) {
                const file = files[0];
                const reader = new FileReader();

                reader.onload = function(e) {
                    // CurÄƒÈ›Äƒm zona de upload È™i afiÈ™Äƒm previzualizarea
                    imageUploadArea.innerHTML = '';
                    
                    const previewImage = document.createElement('img');
                    previewImage.src = e.target.result;
                    previewImage.classList.add('image-preview');

                    imageUploadArea.appendChild(previewImage);
                    imageCountSpan.textContent = `(1/${maxFiles})`;
                    
                    // AdÄƒugÄƒm o clasÄƒ pentru stilizare (opÈ›ional, dar recomandat)
                    imageUploadArea.classList.add('has-preview');
                };
                
                reader.readAsDataURL(file);
            } else {
                // DacÄƒ nu a fost selectat niciun fiÈ™ier, revenim la starea iniÈ›ialÄƒ
                imageUploadArea.innerHTML = '<i class="fas fa-plus-circle"></i><p>AdaugÄƒ pÃ¢nÄƒ la 1 imagine</p>';
                imageCountSpan.textContent = `(0/${maxFiles})`;
                imageUploadArea.classList.remove('has-preview');
            }
        });

        // OpÈ›ional: AdÄƒugÄƒm o funcÈ›ionalitate de bazÄƒ pentru a deschide selectorul de fiÈ™iere
        // cÃ¢nd se face click pe zona vizibilÄƒ (doar dacÄƒ nu are deja o imagine).
        imageUploadArea.addEventListener('click', (e) => {
            if (e.target.tagName !== 'INPUT' && !imageUploadArea.classList.contains('has-preview')) {
                 imageUpload.click();
            }
        });
    </script>
    
