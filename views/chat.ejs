<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header class="chat-header">
        <a href="/" class="back-arrow">â†</a>
        <h1>Chat (MaÈ™ina: <%= roomId %>)</h1>
        <div class="header-icons">...</div>
    </header>

    <div class="chat-container">
        <div id="messages" class="messages-area">
            <div class="system-message">V-aÈ›i alÄƒturat chat-ului.</div>
        </div>

        <form id="chatForm" class="input-message-area">
            <input type="text" id="messageInput" placeholder="Scrie un mesaj..." required>
            <button type="submit">Trimite</button>
        </form>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const userId = '<%= userId %>';
        const username = '<%= username %>';
        const roomId = '<%= roomId %>';

        const socket = io();
        socket.emit('joinRoom', roomId);

        const chatForm = document.getElementById('chatForm');
        const messageInput = document.getElementById('messageInput');
        const messagesArea = document.getElementById('messages');

        // Trimite Mesaj
        chatForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const message = messageInput.value;
            if (message) {
                socket.emit('chatMessage', { roomId, message, senderId: userId, senderName: username });
                messageInput.value = '';
            }
        });

        // PrimeÈ™te Mesaj
        socket.on('message', (data) => {
            const messageElement = document.createElement('div');
            // Aliniere stÃ¢nga/dreapta
            messageElement.classList.add('chat-message', data.sender === username ? 'own-message' : 'other-message');

            messageElement.innerHTML = `
                <span class="sender-name">${data.sender}:</span>
                <span class="message-text">${data.text}</span>
                <span class="message-time">${data.time}</span>
            `;
            messagesArea.appendChild(messageElement);
            messagesArea.scrollTop = messagesArea.scrollHeight;
        });
    </script>
    
