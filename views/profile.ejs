<%- include('partials/header', { title: 'Garajul Meu' }) %>

<div class="row justify-content-center mt-5">
    <div class="col-12 col-md-10 col-lg-8">
        <h2 class="text-center mb-4 fw-bold">Garajul Meu:</h2>

        <% if(cars.length > 0) { %>
            <div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3 mb-5">
                <% cars.forEach(car => { %>
                    <div class="col">
                        <div class="card shadow-sm h-100 border-0 overflow-hidden car-no-action">
                            <img src="<%= car.imageUrls[0] %>" class="card-img-top" alt="<%= car.make %> <%= car.model %>" style="height: 100px; object-fit: cover;">
                            <div class="card-body p-2">
                                <div class="d-flex align-items-start">
                                    <div class="d-flex flex-column align-items-center me-2">
                                        <img src="/img/drapel-md.png" class="flag-icon me-1">
                                        <span class="fw-bold" style="font-size: 0.6em;">MD</span>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-primary" style="font-size: 0.9em;"><%= car.plateNumber %></div>
                                        <div class="text-muted" style="font-size: 0.75em;"><%= car.make %> <%= car.model %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center mt-5" role="alert">
                <p class="mb-0">Nu ai adăugat nicio mașină în garaj.</p>
                <a href="/add-car" class="btn btn-sm btn-primary mt-2">Adaugă Prima Mașină</a>
            </div>
        <% } %>
        
        <form action="/logout" method="POST" class="mt-5 pt-3 mb-5">
            <button type="submit" class="btn btn-danger w-100 btn-lg shadow">
                <i class="bi bi-box-arrow-right me-2"></i> Logout
            </button>
        </form>
    </div>
</div>

<%- include('partials/footer') %>
