<%- include('partials/header', { title: 'Acasă' }) %>

<% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success alert-dismissible fade show text-center border-0 shadow-sm" role="alert">
        Mașina a fost înregistrată cu succes!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<div class="row justify-content-center pt-4 pb-5"> 
    <div class="col-12 col-md-8 col-lg-6">
        <div class="input-group position-relative shadow-lg rounded-pill bg-white p-1">
            <span class="input-group-text bg-transparent border-0 ps-4">
                <div class="d-flex flex-column align-items-center">
                    <img src="/img/drapel-md.png" style="width: 22px;" alt="MD">
                    <span class="fw-bold text-dark" style="font-size: 0.65em; line-height: 1;">MD</span>
                </div>
            </span>
            
            <input type="text" id="plate-search" name="plateNumber" 
                   class="form-control border-0 py-3 shadow-none" 
                   placeholder="Caută număr (Ex: ABC 123)" 
                   maxlength="8" 
                   style="font-size: 1.1rem; background: transparent;"
                   autocomplete="off">
            
            <button id="clear-search" class="btn btn-link text-muted pe-4" type="button">
                <i class="bi bi-x-lg"></i>
            </button>
            
            <ul id="search-results" class="list-group position-absolute w-100 shadow-lg z-3" 
                style="top: 105%; display: none; border-radius: 15px; overflow: hidden; left: 0;">
            </ul>
        </div>
    </div>
</div>

<h2 class="text-center mb-4 fw-bold">Lista Tuturor Mașinilor</h2>

<div class="cars-grid-container px-2">
    <% if (cars && cars.length > 0) { %>
        <div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3 mb-5">
            <% cars.forEach(car => { %>
                <div class="col car-item">
                    <a href="/car/<%= car._id %>" class="text-decoration-none text-dark d-block h-100">
                        <div class="card shadow-sm h-100 border-0 overflow-hidden card-hover">
                            <img src="<%= (car.imageUrls && car.imageUrls.length > 0) ? car.imageUrls[0] : '/img/default-car.png' %>" 
                                 class="card-img-top" 
                                 alt="<%= car.make %>" 
                                 style="height: 120px; object-fit: cover;">
                            
                            <div class="card-body p-2 position-relative">
                                <i class="bi bi-chevron-right position-absolute top-0 end-0 m-2 fs-6 text-primary"></i>
                                
                                <div class="d-flex align-items-center">
                                    <div class="d-flex flex-column align-items-center me-2 border-end pe-2">
                                        <img src="/img/drapel-md.png" style="width: 18px;" alt="MD">
                                        <span class="fw-bold" style="font-size: 0.55em;">MD</span>
                                    </div>
                                    <div class="text-truncate">
                                        <div class="fw-bold text-primary" style="font-size: 0.95em; line-height: 1.1;">
                                            <%= car.plateNumber %>
                                        </div>
                                        <div class="text-muted text-truncate" style="font-size: 0.75em; max-width: 90px;">
                                            <%= car.make %> <%= car.model %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="alert alert-light text-center py-5 shadow-sm rounded-4">
            <i class="bi bi-car-front fs-1 text-muted d-block mb-3"></i>
            Nu există mașini înregistrate încă.
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>

<script>
    const searchInput = document.getElementById('plate-search');
    const resultsList = document.getElementById('search-results');
    const clearBtn = document.getElementById('clear-search');

    // 1. Curățare URL după succes
    if (window.location.search.includes('success')) {
        setTimeout(() => {
            window.history.replaceState({}, document.title, "/");
        }, 2000);
    }

    // 2. Formatare Automată (ABC 123) și Căutare
    if (searchInput) {
        searchInput.addEventListener('input', async (e) => {
            let cursor = e.target.selectionStart;
            let rawValue = e.target.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
            
            let letters = rawValue.replace(/[0-9]/g, '').substring(0, 3);
            let numbers = rawValue.replace(/[A-Z]/g, '').substring(0, 3);
            
            let formatted = letters;
            if (letters.length === 3 && numbers.length > 0) {
                formatted += ' ' + numbers;
            } else {
                formatted += numbers;
            }

            let oldLen = e.target.value.length;
            e.target.value = formatted;
            
            if (formatted.length > oldLen && formatted.charAt(cursor - 1) === ' ') cursor++;
            e.target.setSelectionRange(cursor, cursor);

            const query = formatted.replace(/\s/g, ''); 
            if (query.length < 2) {
                resultsList.style.display = 'none';
                return;
            }

            try {
                const res = await fetch(`/api/search?plate=${query}`);
                const cars = await res.json();

                if (cars.length > 0) {
                    resultsList.innerHTML = cars.map(car => `
                        <li class="list-group-item list-group-item-action d-flex align-items-center py-2" 
                            onclick="window.location.href='/car/${car._id}'" style="cursor:pointer">
                            <div class="d-flex flex-column align-items-center me-3 border-end pe-2" style="min-width: 40px;">
                                <img src="/img/drapel-md.png" style="width:20px">
                                <span class="fw-bold" style="font-size:0.6em">MD</span>
                            </div>
                            <div>
                                <div class="fw-bold text-primary">${car.plateNumber}</div>
                                <small class="text-muted">${car.make} ${car.model}</small>
                            </div>
                        </li>
                    `).join('');
                    resultsList.style.display = 'block';
                } else {
                    resultsList.innerHTML = '<li class="list-group-item text-muted text-center py-3">Nicio mașină găsită</li>';
                    resultsList.style.display = 'block';
                }
            } catch (err) {
                console.error("Eroare search:", err);
            }
        });
    }

    // 3. Buton Clear
    if (clearBtn) {
        clearBtn.addEventListener('click', () => {
            searchInput.value = '';
            resultsList.style.display = 'none';
            searchInput.focus();
        });
    }

    // 4. Închidere listă la click în exterior
    document.addEventListener('click', (e) => {
        if (searchInput && resultsList && !searchInput.contains(e.target) && !resultsList.contains(e.target)) {
            resultsList.style.display = 'none';
        }
    });
</script>